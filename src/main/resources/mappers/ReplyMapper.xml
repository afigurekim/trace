<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.bit.mapper.ReplyMapper">

<select id="list" resultType="com.bit.domain.ReplyVO">
<![CDATA[
select * from historic_reply where bno=#{bno} order by rno desc
]]>
</select>


<insert id="create">
<![CDATA[
insert into historic_reply(bno,reply_text,replyer) values(#{bno},#{reply_text},#{replyer})
]]>
</insert>

<update id="update">
<![CDATA[
update historic_reply set reply_text=#{reply_text},update_date=now() where rno =#{rno}
]]>
</update>

<delete id="delete">
<![CDATA[
delete from historic_reply where rno=#{rno} 
]]>
</delete>


<select id="listPage" resultType="com.bit.domain.ReplyVO">
<![CDATA[
select * from historic_reply where bno =#{bno} limit #{cri.pageStart},#{cri.perPageNum}
]]>
</select>

<select id="count" resultType="int">
<![CDATA[
select count(bno) from historic_reply where bno =#{bno}
]]>
</select>

</mapper>
