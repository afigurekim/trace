<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.bit.mapper.MemberMapper">

<insert id="insertMember">
insert into member(user_name,user_id,user_pw,birth_day,sex,post,address1,address2,contact1,contact2,contact3,email,phone1,phone2,phone3)
values (#{username},#{userid},#{userpw},#{birthday},#{sex},#{post},#{address1},#{address2},#{contact1},#{contact2},#{contact3},#{email},#{phone1},#{phone2},#{phone3})
</insert>

<select id="checkId" resultType="java.lang.Integer">
select count(*) from member where user_id=#{id}
</select>

<select id="emailCheck" resultType="java.lang.Integer">
select count(*) from member where email=#{email}
</select>

<update id="emailAuth" parameterType="java.util.HashMap">
<![CDATA[
update member set emailcheck=#{auth} where email=#{email}
]]>
</update>

</mapper>
